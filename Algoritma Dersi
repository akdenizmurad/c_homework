#include <stdio.h>
#include <conio.h>

main(){
int sinir=5,bosluk=1;
for (int i=0; i<5; i++)
{
for (int a=0; a<bosluk; a++)
	printf (" ");
for (int c=1; c<=sinir; c++)
	printf ("%d", c);

	
	printf ("\n");
	sinir--;
	bosluk++;
}

		
bosluk=5;
int bas=5;
for (int i=0; i<5; i++)

{
for (int a=0; a<bosluk; a++)
	printf (" ");
for (int c=bas; c<=5; c++)
	printf ("%d", c);

	
	printf ("\n");
	bas--;
	bosluk--;
}

getch();
}
